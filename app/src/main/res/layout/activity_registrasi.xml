<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".registrasi">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28dp"
        android:textStyle="bold"
        android:text="REGISTRASI"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19dp"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="italic"
        android:layout_marginBottom="90dp"
        android:text="*masukkan data sesuai kartu anda!"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button_pilih_foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose file"/>

        <TextView
            android:id="@+id/text_statusfoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="status"/>

    </LinearLayout>


    <EditText
        android:id="@+id/input_id"
        android:layout_width="700px"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:hint="masukkan nim/id"/>

    <EditText
        android:id="@+id/input_nama"
        android:layout_width="700px"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:hint="masukkan nama"/>


    <EditText
        android:id="@+id/input_email"
        android:layout_width="700px"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:hint="masukkan email"/>

    <EditText
        android:id="@+id/input_telp"
        android:layout_width="700px"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:hint="masukkan Telp"/>

    <EditText
        android:id="@+id/input_pass"
        android:layout_width="700px"
        android:textAlignment="center"
        android:inputType="textPassword"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:hint="masukkan password"/>


    <Spinner
        android:layout_marginTop="30px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_status"
        android:entries="@array/list_status"

        />

    <Button
        android:background="@drawable/button1"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:id="@+id/button_regis"
        android:layout_marginTop="100px"/>




</LinearLayout>