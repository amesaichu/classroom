<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registrasi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28dp"
            android:textStyle="bold"
            android:layout_marginTop="100dp"
            android:text="REGISTRASI"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="italic"
            android:layout_marginBottom="90dp"
            android:text="*Masukkan Data Sesuai Kartu Anda!"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button_pilih_foto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose file"/>

            <TextView
                android:id="@+id/text_statusfoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"/>

        </LinearLayout>


        <EditText
            android:id="@+id/input_id"
            android:layout_width="700px"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:hint="Masukkan NIM/ID"/>

        <EditText
            android:id="@+id/input_nama"
            android:layout_width="700px"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:hint="Masukkan Nama"/>


        <EditText
            android:id="@+id/input_email"
            android:layout_width="700px"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:hint="Masukkan Email"/>

        <EditText
            android:id="@+id/input_telp"
            android:layout_width="700px"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:hint="Masukkan Nomor Telp"/>

        <EditText
            android:id="@+id/input_pass"
            android:layout_width="700px"
            android:layout_gravity="center"
            android:inputType="textPassword"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:hint="Masukkan Password"/>


        <Spinner
            android:layout_marginTop="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_status"
            android:entries="@array/auser"

            />

        <Button
            android:background="@drawable/button1"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REGISTER"
            android:id="@+id/button_regis"
            android:layout_marginTop="100px"/>

    </LinearLayout>

</ScrollView>