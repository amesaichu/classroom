<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".form_peminjaman"
    android:layout_margin="25dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="Formulir Permintaan Peminjaman Kelas"
        android:textStyle="bold"
        android:textSize="40px"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/iid"
            android:text="Nomor: "/>
        <EditText
            android:id="@+id/ETid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="set_nim"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/inama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama: "/>
        <EditText
            android:id="@+id/ETnama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="nama"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/ikelas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kelas: "/>
        <EditText
            android:id="@+id/ETkelas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="kelas"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/idate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal Pinjam: "/>
        <EditText
            android:id="@+id/ETdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="pilih tanggal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ruangan: "/>
        <EditText
            android:id="@+id/ed_ruang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="set_ruang"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jam Pinjam: "/>
            <EditText
                android:id="@+id/ed_jam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="60px"
                android:hint="set_jam"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="jam Selesai: "/>
            <EditText
                android:id="@+id/ed_jam2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="set_jam"></EditText>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mata Kuliah: "/>
        <EditText
            android:id="@+id/sp_matkul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="set_jam"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alasan: "/>
        <EditText
            android:id="@+id/et_alasan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="set_alasan"></EditText>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/btnBatalPinjam"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button2"
            android:textColor="@android:color/white"
            android:text="Tolak"
            android:layout_marginRight="50dp"/>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button1"
            android:textColor="@android:color/white"
            android:text="Setujui"/>
    </LinearLayout>
</LinearLayout>